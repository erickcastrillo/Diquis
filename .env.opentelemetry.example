# OpenTelemetry Configuration for Honeycomb.io
# Copy this to your .env file and fill in your values

# Enable OpenTelemetry
OTEL_ENABLED=true

# Service identification
OTEL_SERVICE_NAME=diquis
OTEL_SERVICE_NAMESPACE=football-academy
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
APP_VERSION=1.0.0

# Honeycomb.io configuration
# Get your API key from: https://ui.honeycomb.io/account

# Method 1: Use standard OpenTelemetry environment variable (RECOMMENDED)
# Format: key1=value1,key2=value2
OTEL_EXPORTER_OTLP_HEADERS="x-honeycomb-team=your-honeycomb-api-key-here,x-honeycomb-dataset=diquis-development"

# Method 2: Legacy format (still supported for backward compatibility)
# HONEYCOMB_API_KEY=your-honeycomb-api-key-here
# HONEYCOMB_DATASET=diquis-development

# OTLP Exporter endpoint (default for Honeycomb)
OTEL_EXPORTER_OTLP_ENDPOINT="https://api.honeycomb.io"

# Sampling rate (0.0 to 1.0)
# 1.0 = 100% (all traces), 0.1 = 10% (1 in 10 traces)
# Recommendation: 1.0 for dev/staging, 0.1-0.5 for production
OTEL_SAMPLE_RATE=1.0

# Optional: Additional resource attributes
# OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development,team=backend
