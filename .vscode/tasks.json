  "inputs": [
    {
      "id": "sliceModuleName",
      "description": "Enter slice name (e.g., Football::Categories name:string description:text)",
      "type": "promptString"
    },
    {
      "id": "jobName",
      "description": "Enter job name (e.g., user_notification, player_stats)",
      "type": "promptString"
    },
    {
      "id": "sliceName",
      "description": "Enter slice module name (e.g., Football, Academy)",
      "type": "promptString"
    },
    {
      "id": "jobType",
      "description": "Select job type",
      "type": "pickString",
      "options": [
        {
          "label": "Background Job Only",
          "value": "background"
        },
        {
          "label": "Cron Job Only", 
          "value": "cron"
        },
        {
          "label": "Both Background + Cron",
          "value": "both"
        }
      ]
    },
    {
      "id": "jobQueue",
      "description": "Select job queue",
      "type": "pickString",
      "options": [
        {
          "label": "Default Queue",
          "value": "default"
        },
        {
          "label": "Critical (High Priority)",
          "value": "critical"
        },
        {
          "label": "Low Priority",
          "value": "low"
        },
        {
          "label": "Mailers",
          "value": "mailers"
        },
        {
          "label": "Reports",
          "value": "reports"
        },
        {
          "label": "Maintenance",
          "value": "maintenance"
        },
        {
          "label": "Monitoring",
          "value": "monitoring"
        }
      ]
    },
    {
      "id": "cronExpression",
      "description": "Enter cron expression (e.g., '0 2 * * *' for daily at 2 AM)",
      "type": "promptString"
    },
    {
      "id": "jobDescription",
      "description": "Enter job description for cron schedule",
      "type": "promptString"
    }
  ]
