# Diquis Development Environment (Template)
# Copy this to .env and customize for your setup
# This file is loaded by Docker Compose (see docker-compose.yml env_file directive)

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# For Docker: use service names (postgres, redis) defined in docker-compose.yml
# For host machine: create .env.local with localhost URLs
DATABASE_URL=postgresql://diquis_user:diquis_password@postgres:5432/diquis_development
POSTGRES_USER=diquis_user
POSTGRES_PASSWORD=diquis_password
POSTGRES_DB=diquis_development

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_URL=redis://:diquis_redis_password@redis:6379/0
REDIS_PASSWORD=diquis_redis_password

# ==============================================================================
# RAILS CONFIGURATION
# ==============================================================================
RAILS_ENV=development
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=1
RAILS_LOG_LEVEL=debug
RAILS_LOG_TO_STDOUT=true

# ==============================================================================
# SIDEKIQ CONFIGURATION
# ==============================================================================
SIDEKIQ_USERNAME=admin
SIDEKIQ_PASSWORD=sidekiq_admin_password

# ==============================================================================
# ASSET PIPELINE (Vite)
# ==============================================================================
VITE_RUBY_HOST=0.0.0.0
VITE_RUBY_PORT=5173

# ==============================================================================
# DOCKER CONFIGURATION
# ==============================================================================
COMPOSE_PROJECT_NAME=diquis

# ==============================================================================
# DATABASE SEEDING
# ==============================================================================
# Password used for all seed users in db/seeds.rb
# Override with Rails credentials: rails credentials:edit
SEED_DEFAULT_PASSWORD=Dev3l0pment!2025

# ==============================================================================
# OPENTELEMETRY / HONEYCOMB.IO OBSERVABILITY (Optional)
# ==============================================================================
# Enable/disable OpenTelemetry tracing
OTEL_ENABLED=false

# Service identification
OTEL_SERVICE_NAME=diquis
OTEL_SERVICE_NAMESPACE=football-academy
APP_VERSION=1.0.0

# Honeycomb.io configuration (get your API key from honeycomb.io)
OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io
OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=YOUR_HONEYCOMB_API_KEY,x-honeycomb-dataset=diquis-development

# Sampling rate (1.0 = 100%, 0.1 = 10%)
OTEL_SAMPLE_RATE=1.0
